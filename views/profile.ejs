<%- include('./partials/header') %>

<body>
    <a href="/" class="text-blue-500 hover:underline">‚Üê Back to Home</a>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <a class="px-4 py-2 bg-transparent border border-white text-white rounded hover:bg-white hover:text-black inline-block mb-5 text-xl" href="/users/upload/profilePicture">Upload Profile</a>
        
        <div class="flex items-start gap-4 flex-col">
            <div class="w-24 h-24 rounded-full  overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="Profile Picture">
            </div>

            <h3 class="text-3xl"><span class="font-light">Hello</span>, <%= user.fullname %> üôå</h3>
            <h3>Email: <%= user.email %></h3>
            <h3>Full Name: <%= user.fullname %></h3>
            <h3>Phone Number: <%= user.phone %></h3>
            <h3>User Role: <%= user.role %></h3>
        </div>

        <div class="flex flex-col gap-3 mt-10">
            <a class="text-blue-400 hover:underline" href="/users/mybookings">My Bookings</a>
            <a class="text-blue-400 hover:underline" href="/users/bookVehicles">Book Vehicle for Travel</a>

            <% if (user.role === "admin") { %>
                <a class="text-green-400 hover:underline" href="/vehicles/create">Create Vehicles</a>
                <a class="text-green-400 hover:underline" href="/vehicles/ShowAllVehicles">see vehicles</a>
            <% } %>

            <% if (user.role === "driver") { %>
                <a class="text-yellow-400 hover:underline" href="/users/completeRiding">Complete Ride</a>
            <% } %>
        </div>
    </div>
</body>

<%- include('./partials/footer') %>
